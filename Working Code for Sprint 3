     $amount = $_POST['b_amount']/$no_of_emails;

     for($i=0; $i<count($emails); $i++)
     {
        $sql = mysql_query("INSERT INTO bill_users (b_id, b_email, b_amount, b_date) VALUES ('".$lastid."', '".$emails[$i]."', '".$amount."', '".$createddate."')");
     }

