<script type="text/javascript">

function changestatus(s_val)
{
    alert(s_val);
    $("#status").val(s_val);
    document.nform.submit();
}

$(document).ready(function () {
    $('.totalaccountlinks').click(function(){
         $('.accountlinks').slideToggle(300);
    });
});


$('document').ready(function(){

            $('#b_form').validate({
                    rules:{
                       
                        "group_name":{
                            required:true
                        },
                        "b_desc":{
                            required:true,
                        },
                        "b_amount":{
                            required:true,
                            number: true
                        }},



                    messages:{
                        
                        "group_name":{
                            required:"<span class='error1'>This field is required</span>"
                        },
                        "b_desc":{
                            required:"<span class='error1'>This field is required</span>"
                        },
                        "b_amount":{
                            required:"<span class='error1'>This field is required</span>"
                        }},

                    submitHandler: function(form){
                      $(form).ajaxSubmit({
       success: function() {
       //$("#successMessage").show();
       //$('#form1')[0].reset();
        }
    }); 
            
                    }
                
            })
                        
        });


$('document').ready(function(){

            $('#form1').validate({
                    rules:{
                       
                        "fname":{
                            required:true
                        },
                        "femail":{
                            required:true,
                            email: true
                        }},



                    messages:{
                        
                        "fname":{
                            required:"<span class='error1'>This field is required</span>"
                        },

                        "femail":{
                            required:"<span class='error2'>This field is required</span>"
                        }},

                    submitHandler: function(form){
                      $(form).ajaxSubmit({
       success: function() {
       $("#successMessage").show();
       $('#form1')[0].reset();
        }
    }); 
            
                    }
                
            })
                        
        });


