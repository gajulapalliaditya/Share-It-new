$(document).ready(function () {
    $('.addgroupstext').click(function(){
         $('.totalupdates, .totaladdfriend').hide();
         $('.totaladdgroup').show();
    });
    $('h1, .cancelgroupbox').click(function(){
         $('.totalupdates').show();
         $('.totaladdgroup').hide();
    });
});
</script>

