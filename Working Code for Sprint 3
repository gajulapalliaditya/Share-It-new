<!-- Poup Script -->

<script type="text/javascript">
window.document.onkeydown = function (e)
{
    if (!e){
        e = event;
    }
    if (e.keyCode == 27){
        addbillclose();
        settleupbillpoupclose();
    }
}
function addbill(){
    window.scrollTo(0,0);
    document.getElementById('adbillpoup').style.display='block';
    document.getElementById('screen').style.display='block';
}
function addbillclose(){
    document.getElementById('adbillpoup').style.display='none';
    document.getElementById('screen').style.display='none';
}
function settleupbillpoupclose(){
    document.getElementById('settleupbillpoup').style.display='none';
    document.getElementById('screen1').style.display='none';
}
$('.pcancelbill').click(function (){
    document.getElementById('adbillpoup').style.display='none';
    document.getElementById('screen').style.display='none';
});
function settleupbill(){
    window.scrollTo(0,0);
    document.getElementById('settleupbillpoup').style.display='block';
    document.getElementById('screen').style.display='block';
}
function settleupbillclose(){
    document.getElementById('settleupbillpoup').style.display='none';
    document.getElementById('screen').style.display='none';
}
$('.scancelbill').click(function (){
    document.getElementById('settleupbillpoup').style.display='none';
    document.getElementById('screen').style.display='none';
});
</script>

Ajax:

<?php
error_reporting(0);
include('dbconnect.php');
session_start();
//print_r($_POST);
if($_POST['searchtxt'] !='')
{
$query = mysql_query("select * from user_friends WHERE (friend_name like '%".$_POST['searchtxt']."%') and uid=".$_SESSION['userid']."");
$rows = mysql_num_rows($query);
if($rows >0)
{
while($result1 = mysql_fetch_assoc($query)) {
$res .= '<div class="tfriendslist" id="tfriendslist'.$result1['id'].'">
<a href="friendsdetails.php"><img src="images/friendsicon.jpg" alt="Group image" class="groupicon" />
<p class="addfriendsname">'.$result1['friend_name'].'</p></a>
<img src="images/deletefrnd.png" alt="Group image" class="deletefrndimg" onclick="deletefrnd('.$result1['id'].');" />
</div>';
 } 
}
else
{
	$res= "No Results found.";
}

 echo $res;
// return $res;
}

if($_POST['grouptxt'] !='')
{
$query = mysql_query("select * from groups WHERE (group_name like '%".$_POST['grouptxt']."%') and user_id=".$_SESSION['userid']."");
$rows = mysql_num_rows($query);
if($rows >0)
{
while($result1 = mysql_fetch_assoc($query)) {
$res .= '<div class="groupslist">
<img src="images/groupsicon.jpg" alt="Group image" class="groupicon" />
<p class="groupname">'.$result1['group_name'].'</p>
</div>';
 } 
}
else
{
	$res= "No Results found.";
}

 echo $res;
// return $res;
}

if($_POST['fid'] != '')
{
	mysql_query("delete from user_friends WHERE id=".$_POST['fid']."");
	echo "success";
}

if($_POST['group_id'] != '')
{
	$query = mysql_query("select * from group_members where gid=".$_POST['group_id']." ");
	$rows = mysql_num_rows($query);
	while($res_group_mem = mysql_fetch_assoc($query))
	{
		$res .= $res_group_mem['femail'].',';
	}

	$res = substr($res, 0, -1);
echo $res;
}
?>
