<?php
error_reporting(0);
include('dbconnect.php');
session_start();

if($_SESSION['userid'] == '')
{
    header("location:http://shareout.us");
    exit;
}

if(isset($_POST) && $_POST['femail'] != '' && $_SESSION['userid'] != '')
{

    $query = mysql_query("select * from user_friends where friend_email='".$_POST['femail']."' and uid=".$_SESSION['userid']."");
    $rows = mysql_num_rows($query);

    if($rows ==1 || $_POST['femail'] == $_SESSION['emailid'])
    {
        echo $error = "You have already added this friend.";
    }
    else
    {
        $query = mysql_query("select * from users where Email_Id= '".$_POST['femail']."' ");
        $rows = mysql_num_rows($query);
        $result1 = mysql_fetch_assoc($query);

        //echo $result1['id'];

        if($result1['id'] != '')
        {
            $sql = mysql_query("INSERT INTO user_friends (uid, fuid, friend_name, friend_email, status) VALUES ('".$_SESSION['userid']."', '".$result1['id']."', '".$_POST['fname']."', '".$_POST['femail']."', '1')");

            $sql1 = mysql_query("INSERT INTO user_friends (uid, fuid, friend_name, friend_email, status) VALUES ('".$result1['id']."', '".$_SESSION['userid']."', '".$_SESSION['name']."', '".$_SESSION['emailid']."', '1')");
            echo $error = "Added Succesfully";
        }
        else
        {

           
            $sql = mysql_query("INSERT INTO user_friends (uid, friend_name, friend_email) VALUES ('".$_SESSION['userid']."', '".$_POST['fname']."', '".$_POST['femail']."')");
            echo $error = "Added Succesfully";
        }   

        $query = mysql_query("select * from users where Email_Id='".$_POST['femail']."'");
        $rows = mysql_num_rows($query);
if($rows ==0)
    {
        $to = $_POST['femail'];
         $subject = "Request to join ShareIt";
         
         $message = "Hi ".$_POST['fname'].", <br><br>Your friend has invited you to join this site. Please click the below link.<br><br>http://shareout.us<br><br>Thankyou,<br>Shareout.";
         //$message .= "<h1>This is headline.</h1>";
         //echo $message;exit;
         $header = "From:gajulapalli.aditya@gmail.com \r\n";
         //$header = "Cc:afgh@somedomain.com \r\n";
         $header .= "MIME-Version: 1.0\r\n";
         $header .= "Content-type: text/html\r\n";
         
         $retval = mail ($to,$subject,$message,$header);
         
         if( $retval == true )
         {
            echo $error= "Message sent successfully...";
         }
         else
         {
            echo $error= "Message could not be sent...";
         }
     }
    }
}

if(isset($_POST) && $_POST['groupname'] != '')
{
    $query = mysql_query("select * from groups where group_name='".$_POST['groupname']."'");
    $rows = mysql_num_rows($query);

    if($rows ==1)
    {
       echo  $error = "This group name already existing. Please try another one.";
    }
    else
    {
        $date= date('Y-m-d H:i:s');
        $sql = mysql_query("INSERT INTO groups (user_id, group_name, createddate) VALUES ('".$_SESSION['userid']."', '".$_POST['groupname']."', '".$date."')");
       
        $lastid = mysql_insert_id();

        $sql = mysql_query("INSERT INTO group_members (gid, userid, member_uid, fname, femail) VALUES ('".$lastid."', '".$_SESSION['userid']."', '".$_SESSION['userid']."', '".$_SESSION['name']."', '".$_SESSION['emailid']."')");

       echo  $error = "Added Succesfully";
